
import { VerticalBox, Button, LineEdit } from "std-widgets.slint";

export component MainWindow inherits Window {
    in-out property <string> connection-status;
    callback request-data();

    min-width: 600px;
    min-height: 400px;
    title: "Slint deno runtime test";

    VerticalBox {
        width: 100%;
        height: 100%;
        alignment: start;

        LineEdit {
            placeholder-text: "hostname";
        }
        
        Button { 
            text: "Connect";
        }

        Text {
            horizontal-alignment: left;
            text: "Connection status:";
        }

        Text {
            text: root.connection-status;
            horizontal-alignment: left;
            wrap: word-wrap;
        }
    }
}
